<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white"
    xmlns:custom  = "http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_x"
        android:paddingBottom="@dimen/margin_x"
        android:clickable="true"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_profile_blue"
            android:background="@drawable/shape_circle_stroke_blue"/>

        <TextView
            style="@style/title"
            android:id="@+id/tvName"
            android:layout_marginTop="@dimen/margin_s"
            android:layout_marginBottom="@dimen/margin_x"
            android:text="Manuel Páez"
            />

        <com.future333.chefzin.view.FontButton
            style="@style/optionsProfile"
            android:id="@+id/btnSettingData"
            android:text="Configurar mis datos"/>


        <!--zone infoUser-->
        <LinearLayout
            android:id="@+id/zoneInfoUser"
            android:layout_margin="@dimen/margin_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.future333.chefzin.view.TextViewImage
                style="@style/tviProfie"
                android:id="@+id/tviEmail"
                custom:text="correo"
                custom:image="@mipmap/ic_gmail"
                />

            <com.future333.chefzin.view.TextViewImage
                style="@style/tviProfie"
                android:id="@+id/tviPhone"
                custom:text="celular"
                custom:image="@mipmap/ic_gmail"
                />
        </LinearLayout>

        <com.future333.chefzin.view.FontButton
            style="@style/optionsProfile"
            android:id="@+id/btnConditions"
            android:text="Condiciones y politicas"/>

        <com.future333.chefzin.view.FontButton
            style="@style/optionsProfile"
            android:id="@+id/btnFrequentQuestions"
            android:text="preguntas frecuentes "/>

        <com.future333.chefzin.view.FontButton
            style="@style/optionsProfile"
            android:id="@+id/btnLogOut"
            android:text="Cerrar sesión"/>

    </LinearLayout>
</ScrollView>