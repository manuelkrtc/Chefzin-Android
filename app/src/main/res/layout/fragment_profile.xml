<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white"
    xmlns:custom  = "http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_x"
        android:paddingBottom="@dimen/margin_x"
        android:clickable="true"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_circle_stroke_blue"/>

        <TextView
            style="@style/title"
            android:id="@+id/tvName"
            android:layout_marginTop="@dimen/margin_s"
            android:layout_marginBottom="@dimen/margin_x"
            android:text="Manuel Páez"
            />

        <com.future333.chefzin.view.FontButton
            style="@style/optionsProfile"
            android:id="@+id/btnSettingData"
            android:text="Configurar mis datos"/>


        <com.future333.chefzin.view.TextViewImage
            android:id="@+id/papa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:text="papa"
            />

        <com.future333.chefzin.view.TextViewImage
            android:id="@+id/mama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:text="mama"
            />

        <com.future333.chefzin.view.TextViewImage
            android:id="@+id/pap1aw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:text="papaaaaaaaa"
            />

        <com.future333.chefzin.view.TextViewImage
            android:id="@+id/pap1a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:text="papa"
            />
        <!--<com.future333.chefzin.view.FontTextView-->
            <!--android:layout_width="180dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:text="manuelkrtc@gmail.com"-->
            <!--android:background="@drawable/shape_line_buttom_blue"-->
            <!--android:drawableLeft="@drawable/drawable_ic_gmail"-->
            <!--/>-->
        

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:orientation="horizontal"
            android:background="@drawable/shape_line_buttom_blue_s">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:padding="2dp"
                android:src="@mipmap/ic_faceboook"/>

            <com.future333.chefzin.view.FontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="manuelkrtc@hotmail.com"
                android:gravity="center"
                android:textSize="@dimen/sizeText_s"/>

        </LinearLayout>


        <com.future333.chefzin.view.FontButton
            style="@style/optionsProfile"
            android:id="@+id/btnConditions"
            android:text="Condiciones y politicas"/>

        <com.future333.chefzin.view.FontButton
            style="@style/optionsProfile"
            android:id="@+id/btnFrequentQuestions"
            android:text="preguntas frecuentes "/>

        <com.future333.chefzin.view.FontButton
            style="@style/optionsProfile"
            android:id="@+id/btnLogOut"
            android:text="Cerrar sesión"/>

    </LinearLayout>
</ScrollView>