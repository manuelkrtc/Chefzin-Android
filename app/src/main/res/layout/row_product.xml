<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    xmlns:custom  = "http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <com.future333.chefzin.view.FontTextView
            style="@style/title"
            android:id="@+id/tvChefs"
            android:layout_centerHorizontal="true"
            android:text="MENU"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivProduct"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/img_breakfast"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryBlur"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_alignParentBottom="true">

                <com.future333.chefzin.view.FontTextView
                    android:id="@+id/tvNameProduct"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_s"
                    android:text="Ensalada de frutas con"
                    android:textColor="@color/white"
                    custom:fontName="raleway_bold.ttf"
                    android:textSize="@dimen/sizeText_xxx"
                    android:gravity="right"
                    />

                <com.future333.chefzin.view.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_s"
                    android:layout_gravity="center_vertical"
                    android:text="|"
                    android:textColor="@color/white"/>

                <com.future333.chefzin.view.FontTextView
                    android:id="@+id/tvPriceProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="$16.0000"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginTop="@dimen/margin_s"
            android:layout_marginBottom="@dimen/margin_s"
            android:orientation="vertical"
            android:background="@drawable/shape_rectangle_stroke_corner_blue">

            <com.future333.chefzin.view.FontTextView
                style="@style/textInfo"
                android:id="@+id/tvDescriptionProduct"
                android:layout_margin="@dimen/margin_s"
                android:text="dfefdfdsfkm dskmkfmdkmfdmk ffmdfkmdff dfdfds ffdfdfdfdfdsfds fdsfdfdsf"/>

            <com.future333.chefzin.view.FontButton
                style="@style/button_blue"
                android:id="@+id/btnLogIn"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:text="Ingredientes"
                android:layout_marginBottom="@dimen/margin_s"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_s"
                android:textAllCaps="false"
                />

        </LinearLayout>

    </LinearLayout>




</ScrollView>