<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/toolbar"
            />

        <!--zone form Log In-->
        <LinearLayout
            android:id="@+id/zoneLogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin"
            android:visibility="gone"
            >

            <TextView
                style="@style/title"
                android:layout_marginTop="@dimen/margin_x"
                android:layout_marginBottom="@dimen/margin_x"
                android:text="INICIAR SESIÓN"
                />

            <EditText
                style="@style/form"
                android:id="@+id/etEmailLog"
                android:hint="Correo electrónico"/>

            <EditText
                style="@style/form"
                android:id="@+id/etPasswordLog"
                android:hint="Contraseña"
                android:layout_marginBottom="@dimen/margin"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿olvidaste tu contraseña?"
                android:textSize="@dimen/sizeText_ss"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"/>

            <Button
                style="@style/button_blue"
                android:text="INGRESAR"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CREAR CUENTA"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sizeText_s"
                android:textStyle="bold"/>

        </LinearLayout>

        <!--zone form Register-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:visibility="visible"
            >

            <TextView
                style="@style/title"
                android:layout_marginTop="@dimen/margin_x"
                android:layout_marginBottom="@dimen/margin_x"
                android:text="COMPLETA TUS DATOS"
                />

            <EditText
                style="@style/form"
                android:id="@+id/etName"
                android:hint="Nombres y apellidos"/>

            <EditText
                style="@style/form"
                android:id="@+id/etEmail"
                android:hint="Correo electrónico"/>

            <EditText
                style="@style/form"
                android:id="@+id/etPassword"
                android:hint="Contraseña"/>

            <EditText
                style="@style/form"
                android:id="@+id/etPasswordConfirm"
                android:hint="Confirmar contraseña"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/margin">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acepto voluntariamente los términos y condiciones de chefzin."
                    android:textSize="@dimen/sizeText_ss"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <Button
                style="@style/button_blue"
                android:text="CREAR CUENTA"
                android:layout_marginBottom="@dimen/margin"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Si ya tienes cuenta "
                    android:textSize="@dimen/sizeText_s"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ingresa aqui"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sizeText_s"/>
            </LinearLayout>


        </LinearLayout>

        <!--zone b0ttom -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:textSize="@dimen/sizeText_s"
                android:layout_marginBottom="@dimen/margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sizeText_s"
                android:text="CONECTAR CON"/>

            <!--zone social networks-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    style="@style/button_social_network"
                    android:background="@drawable/background_btn_facebook"/>

                <Button
                    style="@style/button_social_network"
                    android:background="@drawable/background_btn_twitter"/>

                <Button
                    style="@style/button_social_network"
                    android:background="@drawable/background_btn_gmail"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:textSize="@dimen/sizeText_s"
                android:text="no publicamos sin su autorización"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/tvTermConditions"
                    android:layout_alignLeft="@+id/tvTermConditions"
                    android:background="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/tvTermConditions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/margin_s"
                    android:textSize="@dimen/sizeText_s"
                    android:text="Términos y condiciones"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/tvTermConditions"
                    android:layout_alignLeft="@+id/tvTermConditions"
                    android:background="@color/colorPrimary"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
