<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_sliderlayout_record"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin"
    xmlns:custom  = "http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!--zona Product_list-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/shape_rectangle_stroke_corner_blue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_ss"
            android:gravity="end">

            <com.future333.chefzin.view.FontTextView
                style="@style/textBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orden: "
                android:textSize="@dimen/sizeText_xx"
                />

            <com.future333.chefzin.view.FontTextView
                android:id="@+id/tvOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="301975"
                android:textSize="@dimen/sizeText_xx"
                />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_ss"/>

    </LinearLayout>

    <!--zone total-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_text_checkout"
        android:gravity="center_vertical"
        >
        <com.future333.chefzin.view.FontTextView
            style="@style/textCheckout"
            android:id="@+id/textTotal"
            android:gravity="left"
            android:text="Total"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="15dp"
            android:background="@drawable/shape_line_buttom_blue"/>
        <com.future333.chefzin.view.FontTextView
            style="@style/textCheckout"
            android:id="@+id/tvTotal"
            android:gravity="right"
            android:text="$3.500"/>
    </LinearLayout>

    <!--zone steps-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Recibido y \n cocinando"
                android:gravity="center"
                android:textSize="@dimen/sizeText_ss"/>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_rectangle_stroke_corner_green"
                >

                <com.future333.chefzin.view.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="50dp"
                    android:textColor="@color/green"
                    custom:fontName="raleway_bold.ttf"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="-10dp"
                    />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Recibido y \n cocinando"
                android:gravity="center"
                android:textSize="@dimen/sizeText_ss"/>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_rectangle_stroke_corner_green"
                >

                <com.future333.chefzin.view.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="50dp"
                    android:textColor="@color/green"
                    custom:fontName="raleway_bold.ttf"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="-10dp"
                    />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Recibido y \n cocinando"
                android:gravity="center"
                android:textSize="@dimen/sizeText_ss"/>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_rectangle_stroke_corner_green"
                >

                <com.future333.chefzin.view.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="50dp"
                    android:textColor="@color/green"
                    custom:fontName="raleway_bold.ttf"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="-10dp"
                    />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Recibido y \n cocinando"
                android:gravity="center"
                android:textSize="@dimen/sizeText_ss"/>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_rectangle_stroke_corner_green"
                >

                <com.future333.chefzin.view.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="50dp"
                    android:textColor="@color/green"
                    custom:fontName="raleway_bold.ttf"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="-10dp"
                    />

            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>
