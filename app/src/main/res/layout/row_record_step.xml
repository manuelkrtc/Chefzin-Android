<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    xmlns:custom  = "http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <TextView
        android:id="@+id/tvNameStep"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:text="Recibido y \n cocinando"
        android:gravity="bottom|center_horizontal"
        android:textSize="@dimen/sizeText_ss"
        android:layout_marginBottom="@dimen/margin_s"
        />

    <RelativeLayout
        android:id="@+id/zoneStroke"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@drawable/shape_rectangle_stroke_corner_green"
        >

        <com.future333.chefzin.view.FontTextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="50dp"
            android:textColor="@color/green"
            custom:fontName="raleway_bold.ttf"
            android:layout_centerInParent="true"
            android:layout_marginTop="-10dp"
            />

    </RelativeLayout>

</LinearLayout>
