<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="center"
    android:background="@null"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin"
    xmlns:custom  = "http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <!--zone Document-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_text_checkout"
        android:gravity="center_vertical"
        >
        <com.future333.chefzin.view.FontTextView
            style="@style/textCheckout"
            android:gravity="left"
            android:text="Cedula"/>

        <com.future333.chefzin.view.FontEditText
            style="@style/form"
            android:id="@+id/etDocument"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:inputType="number"
            />
    </LinearLayout>

    <!--zone Address-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_text_checkout"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <com.future333.chefzin.view.FontTextView
            style="@style/textCheckout"
            android:gravity="left"
            android:text="Direccion"/>

        <com.future333.chefzin.view.FontTextView
            style="@style/form"
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            />

        <ImageButton
            style="@style/icon"
            android:id="@+id/btnOpenMap"
            android:layout_marginLeft="-40dp"
            android:src="@drawable/ic_map"/>
    </LinearLayout>

    <!--zone Phone-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_text_checkout"
        android:gravity="center_vertical"
        >
        <com.future333.chefzin.view.FontTextView
            style="@style/textCheckout"
            android:gravity="left"
            android:text="Telefono"/>

        <com.future333.chefzin.view.FontTextView
            style="@style/form"
            android:id="@+id/tvPhone"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:inputType="number"
            />
    </LinearLayout>

    <!--zone Phone-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_text_checkout"
        android:gravity="center_vertical"
        >
        <com.future333.chefzin.view.FontTextView
            style="@style/textCheckout"
            android:layout_width="110dp"
            android:gravity="left"
            android:text="Indicaciones"/>

        <com.future333.chefzin.view.FontTextView
            style="@style/form"
            android:id="@+id/tvIndications"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            />
    </LinearLayout>

</LinearLayout>