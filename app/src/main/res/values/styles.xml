<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="form" >
        <!-- Customize your theme here. -->
        <item name="android:layout_width">          250dp</item>
        <item name="android:layout_height">         wrap_content</item>
        <item name="android:padding">               5dp</item>
        <item name="android:layout_marginTop">      5dp</item>
        <item name="android:layout_marginBottom">   5dp</item>
        <item name="android:textSize">              @dimen/sizeText</item>
        <item name="android:gravity">               center</item>
        <item name="android:background">            @drawable/background_line_blue</item>
        <item name="android:singleLine">            true</item>
    </style>

    <style name="superTitle" >
        <item name="android:layout_width">  wrap_content</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:textSize">      @dimen/sizeText_xxxx</item>
        <item name="android:textColor">     @color/colorPrimary</item>
        <item name="fontName">              raleway_bold.ttf</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>

    <style name="title" >
        <item name="android:layout_width">  wrap_content</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:textStyle">     bold</item>
        <item name="android:textSize">      @dimen/sizeText_xx</item>
        <item name="android:textColor">     @color/colorPrimary</item>
    </style>

    <style name="subTitle" >
        <item name="android:layout_width">  wrap_content</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="android:textStyle">     bold</item>
        <item name="android:textSize">      @dimen/sizeText_x</item>
        <item name="android:textColor">     @color/colorPrimary</item>
    </style>

    <style name="text" >
        <item name="android:gravity">   center</item>
        <item name="android:textSize">  @dimen/sizeText_x</item>
        <item name="android:textColor"> @color/colorPrimary</item>
        <item name="fontName">          raleway_extraLight.ttf</item>
    </style>

    <style name="button_blue" >
        <item name="android:layout_width">  150dp</item>
        <item name="android:layout_height"> 30dp</item>
        <item name="android:background">    @drawable/background_btn_blue</item>
        <item name="android:textColor">     @color/white</item>
        <item name="android:textSize">      @dimen/sizeText</item>
    </style>

    <style name="button_social_network" >
        <item name="android:layout_width">  36dp</item>
        <item name="android:layout_height"> 36dp</item>
        <item name="android:layout_margin"> 6dp</item>
    </style>

    <style name="icon" >
        <item name="android:layout_width">  @dimen/icon_touchable</item>
        <item name="android:layout_height"> @dimen/icon_touchable</item>
        <item name="android:padding">       @dimen/icon_padding</item>
        <item name="android:scaleType">     fitCenter</item>
        <item name="android:background">    @drawable/background_ic</item>
    </style>

    <style name="stripRhombus" >
        <item name="android:layout_width">          match_parent</item>
        <item name="android:layout_height">         10dp</item>
        <item name="android:layout_marginLeft">     @dimen/margin</item>
        <item name="android:layout_marginRight">    @dimen/margin</item>
        <item name="android:src">                   @mipmap/strip_rhombus</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/food_rating_bar_full</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
    </style>

</resources>
